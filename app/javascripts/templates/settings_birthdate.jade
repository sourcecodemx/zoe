include ./button_submit_outline.jade

.scroll-content
	.page-content
		form.row
			.col
				.padding
					h5.text-center Puedes editar tu fecha de nacimiento.
					.list
						label.item.item-input
							input#birthdate(type="date", placeholder="2014-01-01", min="01-01-1900", max="2014-01-01")

					.text-center Fecha de nacimiento:
						strong#currentBirthdate #{data.birthdate}
					
					br
					+submitButton()