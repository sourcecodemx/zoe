<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.zoewatermovil.app" version="1.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Zoe Water</name>
    <description>
        Aplicacion de Zoe Water
    </description>
    <author email="contacto@sourcecode.mx" href="http://sourcecode.mx">
        SourceCode
    </author>
    <content src="index.html" />
    <access origin="*" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AutoHideSplashScreen" value="false" />

    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icon/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/60.png" width="60" height="60" />
        <icon src="res/icon/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/76.png" width="76" height="76" />
        <icon src="res/icon/152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/icon/40.png" width="40" height="40" />
        <icon src="res/icon/80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/57.png" width="57" height="57" />
        <icon src="res/icon/114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/72.png" width="72" height="72" />
        <icon src="res/icon/144.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/29.png" width="29" height="29" />
        <icon src="res/icon/58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/50.png" width="50" height="50" />
        <icon src="res/icon/100.png" width="100" height="100" />

        <splash src="res/screen/Default~iphone.png" width="320" height="480"/>
        <splash src="res/screen/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="res/screen/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/screen/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="res/screen/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/screen/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/screen/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="res/screen/Default-667h.png" width="750" height="1334"/>
        <splash src="res/screen/Default-736h.png" width="1242" height="2208"/>
        <splash src="res/screen/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
</widget>
